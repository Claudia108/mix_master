<h1> <%= @playlist.name  %></h1>
<%= form_for(@playlist) do |f| %>
  <%= f.text_field :name %>

  <% Song.all.each do |song| %>
    <div>
      <%= check_box_tag(:songs_ids, song.id, @playlist.songs.include?(song), :name => 'playlist[song_ids][]', id: "song-#{song.id}") %>
      <%= song.title %>
    </div>
  <% end %>
  <%= f.submit %>
<% end %>
